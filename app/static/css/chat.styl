// VIEW
.chat-container
  flex-grow 10
  // padding .3em

.messages-container
  overflow scroll
  // flex 0 1 auto
  padding .8em
  // flex-grow 20

.input-container
  // flex-grow 1
  padding .8em
  align-self flex-end
  width 95%

.topic
  padding .3em
  color base03
  border-bottom .1em base03

// MESSAGES
prattle-message
  color base03
  list-style-type none
  font-size 1em
  line-height 1.2em

.messages
  list-style none
  max-height 100%
  overflow scroll

.message
  color base03

.message-text
  none

.nick-message
  font-family menlo, monospace
  &:before
    content '<'
  &:after
    content '>'

.self-true
  color sol-blue

.self-false
  color sol-cyan

// ANNOUNCEMENT
.announcement
  color base01
  display table
  padding-left 1em

.nick-announcement
  none

// ACTION
.action
  color base03
  padding-left 1em

.nick-action
  none

// INPUT
#input-form
  display flex
  justify-content space-around
  width 100%

#input-button
  flex-grow 1

#input-text
  flex-grow 10
  width 80%
