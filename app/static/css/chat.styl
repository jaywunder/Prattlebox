// VIEW
.chat-container
  flex-grow 10

.messages-container
  overflow scroll
  padding .8em
  max-height calc(100% - 2.6em)
  flex-grow 20
  &:-webkit-scrollbar
    display none

.input-container
  max-height 2.6em
  min-height 2.6em
  padding .8em
  align-self flex-end
  width 95%
  flex-grow 1

.topic
  min-height 1.6em
  max-height 2.6em
  overflow scroll
  padding .3em
  color base03
  background base2
  border-bottom base03 .1em solid
  &:-webkit-scrollbar
    display none

// MESSAGES
.messages-wrapper
  overflow scroll
  display block
  &:-webkit-scrollbar
    display none

.messages
  list-style none
  overflow scroll
  &:-webkit-scrollbar
    display none

.message
  none

prattle-message
  color base03
  list-style-type none
  font-size 1em
  line-height 1.2em

.message-text
  none

.nick-message
  font-family menlo, monospace
  &:before
    content '<'
  &:after
    content '>'

.self-true
  color sol-blue

.self-false
  color sol-cyan

// ANNOUNCEMENT
.announcement
  color base01
  display table
  padding-left 1em

.nick-announcement
  none

// ACTION
.action
  color base03
  padding-left 1em

.nick-action
  none

// INPUT
#input-form
  display flex
  justify-content space-around
  width 100%

#input-button
  flex-grow 1

#input-text
  flex-grow 10
