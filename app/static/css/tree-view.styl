.tree-view
  background base0
  overflow scroll
  flex-grow 1
  border-right 1px solid base03
  min-width 10em
  max-width 15em
  user-select none
  &:-webkit-scrollbar
    display none
  &:highlight
    display none

pr-channel
  color base02

//CHANNEL LIST
.channel-list
  flex-grow 20
  margin .8em
  overflow visible
  display block

.channel
  list-style-type none
  &:highlight
    display none
  &:hover
    cursor pointer

.channel-active-true
  color base02
  font-weight bold

.channel-active-false
  color base02

.channel-unread
  font-size .8em
  background base01
  padding .2em
  border-radius .5em

.channel:hover.channel-close
  display inline-block

.channel-close
  cursor pointer
  color sol-red

// CHANNEL LIST
.channel-nick-list
  list-style-type none
  padding-left 1.5em

// CHANNEL BUTTONS
.channel-buttons
  border-top 1px solid base03
  flex-direction row
  background base01

.channel-button
  color base03
  padding .3em
  align-self flex-start
  cursor pointer
  height 100%
